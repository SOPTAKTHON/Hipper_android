<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textview_main_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="41dp"
            android:fontFamily="@font/blackhansans_regular"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:text="OOO"
            android:gravity="left" />

        <TextView
            android:id="@+id/textview_main_nickname_after"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/textview_main_nickname"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="38dp"
            android:fontFamily="@font/blackhansans_regular"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:text=" Hipper님"
            android:gravity="left" />

        <TextView
            android:id="@+id/textview_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="82dp"
            android:layout_marginLeft="41dp"
            android:layout_marginRight="80dp"
            android:fontFamily="@font/blackhansans_regular"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:text="James, Rosa와 함께 Hip한 기억을 되돌려보세요!"
            android:gravity="left" />

        <ImageView
            android:id="@+id/imageview_button_alarm_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_btn_unpush"
            app:layout_constraintBottom_toTopOf="@id/imageview_james"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp"/>
        <ImageView
            android:id="@+id/imageview_button_alarm_unpush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_btn_push"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/imageview_james"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp"/>


        <ImageView
            android:id="@+id/imageview_button_exercise_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_btn_push"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/imageview_rosa"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="80dp"/>

        <ImageView
            android:id="@+id/imageview_button_exercise_unpush"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_btn_unpush"
            app:layout_constraintBottom_toTopOf="@id/imageview_rosa"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="80dp"/>

        <ImageView
            android:id="@+id/imageview_rosa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_illust_rosa"
            />

        <ImageView
            android:id="@+id/imageview_james"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_illust_james"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>