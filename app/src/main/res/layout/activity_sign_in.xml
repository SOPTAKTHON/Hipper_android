<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff80ad"
    tools:context=".SignIn.SignInActivity">

    <TextView
        android:id="@+id/textview_signIn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="211dp"
        android:fontFamily="@font/black_han_sans"
        android:text="LOG-IN"
        android:textColor="#000000"
        android:textSize="31sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edittext_signIn_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/layout_edittext_sign_in"
        android:fontFamily="@font/black_han_sans"
        android:hint="ID"
        android:inputType="textMultiLine|textNoSuggestions"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="13dp"
        android:paddingBottom="10dp"
        android:textColor="#5b5b5b"
        android:textColorHint="#5b5b5b"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_signIn_title" />

    <EditText
        android:id="@+id/edittext_signIn_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/layout_edittext_sign_in"
        android:fontFamily="@font/black_han_sans"
        android:hint="PASSWORD"
        android:inputType="textMultiLine|textNoSuggestions|textPassword"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="13dp"
        android:paddingBottom="10dp"
        android:textColor="#5b5b5b"
        android:textColorHint="#5b5b5b"
        android:textSize="15sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edittext_signIn_email" />

    <Button
        android:id="@+id/button_signIn_signIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/layout_button_sign"
        android:fontFamily="@font/black_han_sans"
        android:gravity="center_horizontal"
        android:paddingHorizontal="133dp"
        android:paddingTop="17dp"
        android:paddingBottom="12dp"
        android:text="로그인"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="normal"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@id/edittext_signIn_email"
        app:layout_constraintStart_toStartOf="@id/edittext_signIn_email"
        app:layout_constraintTop_toBottomOf="@id/edittext_signIn_pw" />

    <TextView
        android:id="@+id/textview_signIn_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/black_han_sans"
        android:gravity="center_horizontal"
        android:text="회원가입"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_signIn_signIn" />

</androidx.constraintlayout.widget.ConstraintLayout>