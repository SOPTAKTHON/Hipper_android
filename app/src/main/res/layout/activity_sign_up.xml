<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff80ad"
    tools:context=".SignUp.SignUpActivity">

    <TextView
        android:id="@+id/textview_signUp_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="211dp"
        android:fontFamily="@font/black_han_sans"
        android:text="SIGN-UP"
        android:textColor="#000000"
        android:textSize="31sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_signUp_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/layout_edittext_sign_up"
        android:fontFamily="@font/black_han_sans"
        android:hint="ID"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="13dp"
        android:paddingBottom="10dp"
        android:textColor="#5b5b5b"
        android:textColorHint="#5b5b5b"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_signUp_title" />

    <EditText
        android:id="@+id/edittext_signUp_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/layout_edittext_sign_up"
        android:fontFamily="@font/black_han_sans"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="13dp"
        android:paddingBottom="10dp"
        android:textColor="#5b5b5b"
        android:textColorHint="#5b5b5b"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/edittext_signUp_email"
        app:layout_constraintStart_toStartOf="@id/edittext_signUp_email"
        app:layout_constraintTop_toBottomOf="@id/edittext_signUp_email" />

    <EditText
        android:id="@+id/edittext_signUp_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/layout_edittext_sign_up"
        android:fontFamily="@font/black_han_sans"
        android:hint="NICKNAME"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="13dp"
        android:paddingBottom="10dp"
        android:textColor="#5b5b5b"
        android:textColorHint="#5b5b5b"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/edittext_signUp_email"
        app:layout_constraintStart_toStartOf="@id/edittext_signUp_email"
        app:layout_constraintTop_toBottomOf="@id/edittext_signUp_pw" />

    <Button
        android:id="@+id/button_signUp_signUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/layout_button_sign"
        android:fontFamily="@font/black_han_sans"
        android:gravity="center"
        android:paddingTop="17dp"
        android:paddingBottom="12dp"
        android:text="회원가입"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="normal"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@id/edittext_signUp_email"
        app:layout_constraintStart_toStartOf="@id/edittext_signUp_email"
        app:layout_constraintTop_toBottomOf="@id/edittext_signUp_nickname" />


</androidx.constraintlayout.widget.ConstraintLayout>