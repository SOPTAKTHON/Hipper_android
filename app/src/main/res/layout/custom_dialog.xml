<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_corner"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textview_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스쿼트"
        android:textSize="35sp"
        android:fontFamily="@font/blackhansans"
        android:layout_marginTop="39dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />트

    <TextView
        android:id="@+id/textview_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10개"
        android:textSize="35sp"
        android:fontFamily="@font/blackhansans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_exercise" />

    <TextView
        android:id="@+id/textview_try"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지금 해볼까요?"
        android:fontFamily="@font/blackhansans"
        android:layout_marginTop="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_count" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_other_exercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rectangle"
        android:text="다른 운동"
        android:textColor="@color/white"
        android:fontFamily="@font/blackhansans"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/textview_try"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_try_now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_rectangle"
        android:text="지금 할래요"
        android:textColor="@color/white"
        android:fontFamily="@font/blackhansans"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="17dp"
        app:layout_constraintTop_toBottomOf="@id/textview_try"
        app:layout_constraintStart_toEndOf="@id/button_other_exercise"/>


</androidx.constraintlayout.widget.ConstraintLayout>